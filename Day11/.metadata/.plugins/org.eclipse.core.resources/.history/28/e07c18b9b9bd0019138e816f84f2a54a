/**
 * 
 */
function strDemo() {
	var res="";
	var str="Welcome to HTML Programming....";
	var len = str.length;
	res += "Length is " + len + "<br/>";
	res += "Lower-Case String is <b>" + str.LowerCase() + "<br/><br/>";
	res += "Upper-Case String is <b>" + str.UpperCase() + "<br/><br/>";
	res += "First Occurance of 'a' is <b>" + str.index("a") + "<br/><br/>";
	res += "Char at 5th Position is <b>" + str.charAt(5) +  "<br/><br/>";
	res += "Replacing String is <b>" + str.replace("HTML", "HTML5") +  "<br/><br/>";
	document.getElementById("res").innerHTML= res;
}